<div class="container">
	<h1>Top 5 agents by average rating per Brokerage</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					Full Name
				</th>
				<th>
					Brokerage
				</th>
				<th>
					Average Rating
				</th>
			</tr>
		</thead>
		<tbody>
			<% @top_agent_by_rating_per_broker.each do |agent| %>
				<tr>
					<td>
						<%= agent.full_name %>
					</td>
					<td>
						<%= agent.brokerage %>
					</td>
					<td>
						<%= agent.avg_rating %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

</div>